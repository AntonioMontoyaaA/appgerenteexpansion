<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_autoriza"
            />

        <ScrollView
            android:background="@drawable/background"
            android:id="@+id/scroll_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/background"
                    android:layout_marginTop="2dp"
                    android:padding="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="610dp"
                    android:orientation="horizontal">

                    <android.support.constraint.ConstraintLayout
                        android:orientation="horizontal"
                        android:background="@drawable/estilo_boton_blanco"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/aceptar"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/palomita_azul"
                            android:visibility="gone"
                            android:textColor="@color/letra"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typeface="robotoBold" />

                        <ImageView
                            android:id="@+id/cancelar"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/tache_cancelar"
                            android:textColor="@color/letra"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typeface="robotoBold" />


                        <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                            android:id="@+id/robotoTextView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:text="@string/nombre"
                            android:textColor="@color/azultaco"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cancelar"
                            app:typeface="robotoRegular" />


                        <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                            android:id="@+id/nombrepropietario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/transparent"
                            tools:text="---"
                            android:textColor="@color/azultaco"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/robotoTextView5"
                            app:typeface="robotoRegular" />

                        <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                            android:id="@+id/robotoTextView7"
                            android:layout_width="wrap_content"
                            android:layout_height="21dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="25dp"
                            android:background="@android:color/transparent"
                            android:text="@string/telefono"
                            android:textColor="@color/azultaco"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nombrepropietario"
                            app:typeface="robotoRegular" />


                        <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                            android:id="@+id/telefono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/transparent"
                            tools:text="---"
                            android:textColor="@color/azultaco"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/robotoTextView7"
                            app:typeface="robotoRegular" />

                        <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                            android:id="@+id/robotoTextView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/transparent"
                            android:text="@string/email"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/azultaco"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/telefono"
                            app:typeface="robotoRegular" />

                        <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/azultaco"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/robotoTextView9"
                            app:typeface="robotoRegular"
                            tools:text="---" />

                        <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                            android:id="@+id/robotoTextView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/transparent"
                            android:text="---"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/azultaco"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/email"
                            app:typeface="robotoBold" />

                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>