<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_autoriza"
            />

        <ScrollView
            android:background="@drawable/background"
            android:id="@+id/scroll_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/background"
                    android:layout_marginTop="2dp"
                    android:padding="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="608dp"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:orientation="horizontal"
                        android:background="@drawable/estilo_boton_blanco"
                        android:layout_width="match_parent"
                        android:layout_height="541dp">



                        <LinearLayout
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_gravity="top"
                            android:background="@drawable/estilo_boton_blanco_up_celeste"
                            android:orientation="vertical">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view3">

                            <LinearLayout
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                    android:id="@+id/nombresitio"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="2dp"
                                    android:backgroundTint="@color/azul"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14sp"
                                    android:textAllCaps="true"
                                    app:typeface="robotoBold"
                                    tools:text="Juchitan 5 de septiembre" />

                                <LinearLayout
                                    android:layout_marginTop="14dp"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:id="@+id/renta"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:backgroundTint="@color/azul"
                                        android:textColor="@color/grisetxt"
                                        android:textSize="18sp"
                                        android:textAllCaps="true"
                                        app:typeface="robotoBold"
                                        tools:text="$30, 000" />
                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="2dp"
                                        android:backgroundTint="@color/azul"
                                        android:textColor="@color/grisetxt"
                                        android:textSize="10sp"
                                        android:textAllCaps="true"
                                        app:typeface="robotoBold"
                                        android:text="MXN" />
                                </LinearLayout>


                                <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                    android:id="@+id/apartirde"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="2dp"
                                    android:backgroundTint="@color/azul"
                                    android:textColor="@color/grisetxt"
                                    android:textSize="12sp"
                                    app:typeface="robotoRegular"
                                    tools:text="Apartir de: 10/11/11" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginTop="14dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:backgroundTint="@color/azul"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"
                                        android:textAllCaps="true"
                                        app:typeface="robotoBold"
                                        android:text="Amortizacion" />

                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:layout_marginStart="120dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:backgroundTint="@color/azul"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"
                                        android:textAllCaps="true"
                                        app:typeface="robotoBold"
                                        android:text="Periodo" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:id="@+id/amortizaciontotal"
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:backgroundTint="@color/azul"
                                        android:textColor="@color/grisetxt"
                                        android:textSize="18sp"
                                        android:textAllCaps="true"
                                        app:typeface="robotoBold"
                                        tools:text="20%" />

                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginTop="2dp"
                                        android:backgroundTint="@color/azul"
                                        android:textColor="@color/grisetxt"
                                        android:textSize="10sp"
                                        android:textAllCaps="true"
                                        app:typeface="robotoBold"
                                        android:text="MXN" />

                                    <LinearLayout
                                        android:layout_marginStart="102dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                            android:id="@+id/periodoamotizacion"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:backgroundTint="@color/azul"
                                            android:textColor="@color/grisetxt"
                                            android:textSize="18sp"
                                            android:textAllCaps="true"
                                            app:typeface="robotoBold"
                                            tools:text="20%" />

                                        <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                            android:id="@+id/meses"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginStart="4dp"
                                            android:backgroundTint="@color/azul"
                                            android:textColor="@color/grisetxt"
                                            android:textSize="10sp"
                                            android:textAllCaps="true"
                                            app:typeface="robotoBold"
                                            android:text="meses" />

                                    </LinearLayout>





                                </LinearLayout>

                                <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="14dp"
                                    android:backgroundTint="@color/azul"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14sp"
                                    android:textAllCaps="true"
                                    app:typeface="robotoBold"
                                    android:text="Periodo de Gracia" />


                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:id="@+id/periodogracia"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="2dp"
                                        android:backgroundTint="@color/azul"
                                        android:textColor="@color/grisetxt"
                                        android:textSize="18sp"
                                        android:layout_marginBottom="6dp"
                                        android:textAllCaps="true"
                                        app:typeface="robotoBold"
                                        tools:text="1" />

                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:id="@+id/unidad"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginTop="2dp"
                                        android:backgroundTint="@color/azul"
                                        android:textColor="@color/grisetxt"
                                        android:textSize="10sp"
                                        android:textAllCaps="true"
                                        android:layout_marginBottom="6dp"
                                        app:typeface="robotoBold"
                                        android:text="meses" />


                                </LinearLayout>


                                <LinearLayout
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:layout_marginBottom="6dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="14dp"
                                        android:backgroundTint="@color/azul"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"
                                        android:textAllCaps="true"
                                        app:typeface="robotoBold"
                                        android:text="COMENTARIOS" />
                                </LinearLayout>




                            </LinearLayout>



                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/autorizalayout"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/can"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/cancelar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="0dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:typeface="robotoBold" />

                            <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                android:layout_marginStart="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blanco"
                                android:textSize="18sp"
                                app:typeface="robotoRegular"
                                android:text="@string/rechazar"  />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/acep"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/aceptar"
                                android:layout_marginStart="50dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="0dp"
                                android:textColor="@color/letra"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:typeface="robotoBold" />

                            <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blanco"
                                android:textSize="18sp"
                                app:typeface="robotoRegular"
                                android:text="@string/autorizar" />
                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>