<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryGerente">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_autoriza"
                />

            <ScrollView
                android:background="@drawable/background"
                android:id="@+id/scroll_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="@drawable/background"
                        android:layout_marginTop="2dp"
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="610dp"
                        android:orientation="horizontal">

                        <android.support.constraint.ConstraintLayout
                            android:orientation="horizontal"
                            android:background="@drawable/estilo_boton_blanco"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/aceptar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/letra"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:typeface="robotoBold" />

                            <ImageView
                                android:id="@+id/cancelar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/letra"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:typeface="robotoBold" />

                            <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                android:id="@+id/robotoTextView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:background="@android:color/transparent"
                                android:text="---"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/azultaco"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toStartOf="@+id/aceptar"
                                app:layout_constraintStart_toEndOf="@+id/cancelar"
                                app:layout_constraintTop_toTopOf="parent"
                                app:typeface="robotoRegular" />


                            <fragment
                                android:id="@+id/map"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="518dp"
                                android:layout_marginTop="4dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/robotoTextView2"
                                app:layout_constraintVertical_bias="0.0" />


                            <LinearLayout
                                android:layout_marginTop="6dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/map">

                                <LinearLayout
                                    android:id="@+id/competencia"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Competencia"
                                        android:textColor="@color/azultaco"
                                        android:textSize="14sp"
                                        app:typeface="robotoRegular" />

                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/generador"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <expansion.neto.com.mx.gerenteapp.utils.font.RobotoTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Generadores de trÃ¡fico"
                                        android:textColor="@color/azultaco"
                                        android:textSize="14sp"
                                        app:typeface="robotoRegular" />

                                </LinearLayout>

                            </LinearLayout>



                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:background="@color/azultaco"
            android:fitsSystemWindows="true"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="7dp"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <include
                android:id="@+id/contenido"
                layout="@layout/slide_zonificacion_competencia"
                tools:visibility="gone" />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/dim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:background="@color/azultaco"
            android:fitsSystemWindows="true"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/rootView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="7dp"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">



            <include
                android:id="@+id/content2"
                layout="@layout/slide_zonificacion_generadores"
                tools:visibility="gone" />



        </LinearLayout>





    </android.support.constraint.ConstraintLayout>

</layout>
